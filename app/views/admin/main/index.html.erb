<div class='container'>
  <h1>Ввод форсированных котировок</h1>

  <div class='row'>
    <div class='alert'>
      <%= flash[:notice]%>
    </div>
    <%= form_for @rate, url: admin_main_index_path, html: { class: 'form-horizontal', method: 'post'} do |f| %>
      <div class='form-group'>
        <%= f.label 'Дата и время', class: 'col-sm-2 control-label' %>
        <div class='col-sm-6'>
          <%= f.datetime_select :forced_till, :include_seconds => true %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label 'Значение котировки', class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.number_field :rate, precence: true %>
        </div>
      </div>
      <%= f.submit 'Принять', class: 'btn btn-primary'%>
    <% end %>
  </div>

  <div class='row'>
    <h2>Раннее введенные значения</h2>
    <table class='table table-striped text-center'>
      <thead>
        <tr>
          <th class='text-center'>Дата</th>
          <th class='text-center'>Котировка</th>
        </tr>
      </thead>

      <tbody>
        <% @rates.each do |rate| %>
        <tr>
          <td><%= rate.forced_till %></td>
          <td><%= rate.rate %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>